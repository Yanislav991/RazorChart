@using RazorChart.Pie.PiePiece;

<figure style="width:@Width">
    <figcaption>
        @Title
    </figcaption>
    <svg viewBox="-55 -55 310 310">
        <g class='sectors'>
            @foreach (var serie in PieSeries)
            {
                <PiePiece Value="@serie.Value.ToString()"
                          Category="@serie.Category"
                          Color="@serie.Color"
                          Definition="@serie.SerieDef"
                          Index="@serie.Index.ToString()"/>
            }
        </g>
    </svg>
</figure>

