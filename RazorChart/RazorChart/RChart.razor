@using RazorChart.Pie.Pie;
@using RazorChart.Bar.Bar;
@using RazorChart.Enums;

<figure style="width:@Width">
    <figcaption>
        @Title
    </figcaption>
    @{
        switch (this.Type)
        {
            case ChartType.Pie:
                <Pie Data="Data"
                     ShowLabels="ShowLabels"/>
                break;
            case ChartType.Bar:
                <Bar Data="Data"/>
                break;
        }

    }
</figure>

