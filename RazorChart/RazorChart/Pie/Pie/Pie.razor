<svg viewBox="-55 -55 310 310">
    <g class='sectors'>
        @foreach (var serie in pieSerieList)
        {
            <path id="chart-serie-@serie.Index"
              d='@serie.SerieDef'
              data-category='@serie.Category'
              data-val='@serie.Value'
              class='char-series'
              fill='@serie.Color'
              stroke="#fff"
              stroke-width="1"
              stroke-opacity="0.2" />
        }
    </g>
</svg>


